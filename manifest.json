{
  "manifest_version": 3,
  "name": "AI Review Analyzer",
  "version": "1.0",
  "description": "AI-powered shopping helper: Summarizes reviews and detects fake ones on Amazon, Flipkart, Meesho, Myntra, and Ajio.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.in/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.flipkart.com/*",
    "*://*.meesho.com/*",
    "*://*.myntra.com/*",
    "*://*.ajio.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.in/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.ca/*",
        "*://*.flipkart.com/*",
        "*://*.meesho.com/*",
        "*://*.myntra.com/*",
        "*://*.ajio.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
